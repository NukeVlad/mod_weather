<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
    <name>Simple weather module</name>
    <author>Yoel Benítez Fonseca</author>
    <version>1.0.1</version>
    <description>A simple not automatic weather module</description>
    <files>
        <filename>mod_weather.xml</filename>
        <filename module="mod_weather">mod_weather.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
        <filename>README.md</filename>
        <filename>LICENSE</filename>
    </files>
    <media folder="media" destination="mod_weather">
      <folder>css</folder>
      <folder>font</folder>
    </media>

    <config>
      <fields name="params">
          <fieldset name="weather">
            <field name="prodate"
                   type="calendar"
                   default="5-10-2008"
                   label="Select a date"
                   description="" format="%d-%m-%Y"
            />
            <field name="temperature"
              type="integer"
              default="25"
              label="Temperature"
              description=""
              first="1" last="50" step="1"
            />
            <field name="daystatedesp"
              type="text"
              default=""
              label="Status"
              description="" size="10" />
            <field name="daystate" type="list" default="sunny" label="Select an option" description="">
              <option value="sunny">Sunny</option>
              <option value="cloudy">Cloudy</option>
              <option value="cloudy-gusts">Cloudy with gusts</option>
              <option value="cloudy-windy">Cloudy and windy</option>
              <option value="fog">Fog</option>
              <option value="hail">Hail</option>
              <option value="thunderstorm">Thunderstorm</option>
              <option value="rain">Rain</option>
              <option value="rain-mix">Rain mix</option>
              <option value="rain-wind">Rain and wind</option>
            </field>
            <field name="city"
              type="text"
              default="Camagüey"
              label="City name"
              description="" size="10" />
              <field name="forecast"
                type="editor"
                label="Forecast"
                description="" width="300" filter="safehtml" />
          </fieldset>
          <fieldset name="advanced">
              <field
                  name="layout"
                  type="modulelayout"
                  label="JFIELD_ALT_LAYOUT_LABEL"
                  description="JFIELD_ALT_MODULE_LAYOUT_DESC"
              />
              <field
                  name="moduleclass_sfx"
                  type="text"
                  label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                  description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
              />
              <field
                  name="cache"
                  type="list"
                  default="1"
                  label="COM_MODULES_FIELD_CACHING_LABEL"
                  description="COM_MODULES_FIELD_CACHING_DESC"
              >
                  <option
                      value="1">JGLOBAL_USE_GLOBAL</option>
                  <option
                      value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
              </field>
              <field
                  name="cache_time"
                  type="text"
                  default="900"
                  label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                  description="COM_MODULES_FIELD_CACHE_TIME_DESC"
              />
              <field
                  name="cachemode"
                  type="hidden"
                  default="static"
              >
                  <option value="static"></option>
              </field>
          </fieldset>
        </fields>
    </config>

</extension>
